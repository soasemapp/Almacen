<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LISTA DE CAJAS"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="21dp"
                android:layout_margin="10dp"
                android:gravity="center"
                >

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="5dp"
                android:background="@color/AzulBack"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/ColorWhite"
                    android:text="Articulo"/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6 "
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/ColorWhite"
                    android:text="Cantidad"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/ColorWhite"
                    android:text="Caja"/>

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerCaja"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@color/Amarillo"
        android:onClick="ImpreCajas"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="37dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:contentDescription="Manos"
            android:src="@drawable/icons8_puerta_abierta_impresora_48" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Imprimir"
            android:textColor="@color/AzulBack"
            android:layout_marginTop="5dp"
            android:textSize="25dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/CageBack"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@color/AzulBack"
        android:onClick="backliscage"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="37dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:contentDescription="Manos"
            android:src="@drawable/ic_baseline_arrow_back_24" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/CageNext"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@color/AzulBack"
        android:onClick="nextliscage"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="37dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:contentDescription="Manos"
            android:src="@drawable/ic_baseline_arrow_forward_24" />

    </LinearLayout>

</LinearLayout>

        </LinearLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>
