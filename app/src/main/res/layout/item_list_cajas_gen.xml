<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/ColorWhite">
    <!-- TIENES QUE PONER EL ONCLICK CON EL MISMO NOMBRE EN ACTIVITY AUNQUE ESTE VACIO-->
    <LinearLayout
        android:id="@+id/lyCaja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:onClick="onClickEnListaCaja">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvCaja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CAJA"
                android:textStyle="bold"
                android:lines="1"
                android:maxLines="1"
                android:padding="5dp"
                android:textSize="12dp"
                android:textAlignment="center"
                android:textColor="@color/AzulBack"/>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/AzulBack"/>
            <TextView
                android:id="@+id/tvCant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="0"
                android:padding="5dp"
                android:textColor="@color/Amarillo"
                android:textStyle="bold"
                android:maxLines="1"
                android:textSize="12dp"
                android:textAlignment="center"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/AzulBack" />
    </LinearLayout>
</LinearLayout>



